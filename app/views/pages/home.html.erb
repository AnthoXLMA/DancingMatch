<div class="background">
  <div class="container">
    <div class="title">
      <h1>Dancing Partners</h1>
      <p>The First WorldWide Dancers Community</p>
    </div>

    <div class="section">
      <div class="row">
        <div class="column">
          <a class="link"><%= link_to "Worldwide", partners_path, class: "btn-ghost" %></a>
        </div>
        <div class="column">
          <a class="link"><%= link_to "Profile", profile_path, class: "btn-ghost" %></a>
        </div>
        <div class="column">
          <a class="link"><%= link_to "Dances", dances_path, class: "btn-ghost" %></a>
        </div>
        <div class="column">
          <a class="link"><%= link_to "Events", class: "btn-ghost" %></a>
        </div>
        <div class="column">
          <a class="link"><%= link_to "Log out", class: "btn-ghost" %></a>
        </div>
      </div>
    </div>
    <div class="search2">
      <%= form_tag dances_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a dance"
      %>
      <%= submit_tag "Search", class: "b-primary" %>
      <% end %>
    </div>
  </div>
</div>
