<%= simple_form_for(dance) do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.input :user %>
  <%= f.submit %>
<% end %>

<%= form_for(@dance) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
