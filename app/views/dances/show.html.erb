<h1>Dancing Partners</h1>
  <h1><%= link_to @style, dances_path(@dance) %></h1>

<div class="add-dance">
  <%= link_to "Select this dance", profile_path(@user.dances),method: :get, id: "dance" %>

</div>

<div class="bouton-home">
  <%= link_to "Home", root_path %>
</div>

  <h1>This dance has <%= @dancers.count %> partners</h1>
<div class="container3">
  <div class="bouton">
    <% @dancer.each do |dance_man| %>
    <div class="card-partner">
      <%= dance_man.pseudo %>
      <%= dance_man.gender %>
      <%= dance_man.age %>
      <%= dance_man.location %>
      <%= link_to "Contact this partner", partner_path(dance_man) %>
    </div>
      <% end %>
    <br>
    <%= @list.each do |man| %>
    <% puts man %>
    <% end %>
  </div>
  <div class="news">
      <h2>NEWS</h2>
    <div class="card-news">
      <h3><'Adel status' is looking for 'rock' partners></h3>
    </div>
  </div>
</div>

