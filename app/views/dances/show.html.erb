<div class="navbar-yourjob" style="box-shadow: 10px 3px 25px #bababa;  justify-content:space-between;">
  <div class="logo">
    <div class="logo-text">
      <h1>Dancing Partners</h1>
    </div>
  </div>
    <%= link_to "Back", :back %>
    <%= link_to "Home", root_path %>
    <%= link_to "My profile", profile_path %>
  </div>
<div class="container3">
  <div class="container-appointments-dances">
    <div class="appointment-card2">
      <h2>Meet the <%= link_to @style, dance_path(@dance) %> worldwide community</h2>
      <div class="add-dance">
        <div class="button"><a><%= link_to "Select this dance", profile_path(@my_selected_dances) %></a></div>
        <div class="button"><a><%= link_to "Create an Event", new_appointment_path(@dance.id),method: :patch, class:"btn-ghost", id: "dance" %></a></div>
      </div>
      <div id="map"
     data-markers="<%= @markers.to_json %>"
     data-dancers="<%= @dancers.to_json %>"
     data-events="<%= @events.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
    <% @appointments_on_map.each do |an_event| %>
    <%= an_event.name %>
    <%= an_event.address %>
    <% end %>
    </div>
  </div>
</div>

