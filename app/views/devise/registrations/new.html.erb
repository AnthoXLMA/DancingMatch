<div class="dp-background">
    <div class="container">
<div class="cont-input-new">
  <div class="container-form">
  <div class="container-card-profile">
    <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= f.error_notification %>
    <div class="form-inputs-registration">
        <div style="margin-right: auto; margin-left: auto; padding: 10px; justify-content: center; text-align: center;">
        <a><%= f.label :genre %></a>
        <%= f.select :gender, User::GENDER_TYPES.map { |gender| [gender] } %>
        <br>
        </div>
        <div style="margin-right: auto; margin-left: auto; padding: 10px; justify-content: center; text-align: center;">
          <%= f.label :experience %>
          <%= f.select :gender, User::EXPERIENCE.map { |experience| [experience] } %><br>
        </div>
    </div>
    <script src="scripts.js"></script>

        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Ton prénom" } %>
<!--          <%= f.input :last_name,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Ton nom" }%> -->
<!--         <%= f.input :city,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Ta ville" }%> -->
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
<!--        <%= f.input :contact,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Ton numéro de téléphone" }%> -->
<!--        <%= f.input :age,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Ton âge" }%> -->
        <%= f.input :location,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Ton adresse" }%>
        <%= f.input :website,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "URL" }%>
        <%= f.label :photo %><br>
        <%= f.file_field :photo, as: :file %>
        <div class="mb-6">
          <%= f.submit "S'inscrire", class: "btn btn-default block w-full text-center", method: :post %>
        </div>
        </div>
      </div>
    <% end %>
  </div>
    </div>
</div>
