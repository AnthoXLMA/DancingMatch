<div class="container-card-profile">
  <div class="container1">
    <div class="my_profile">
      <div class="banner-profile">
        <%= simple_form_for(current_user, method: :put) do |f| %>
          <%= f.error_notification %>
        <div class="image-profile">
          <%= image_tag current_user.photo if current_user.photo.attached? %>
        </div>
        <div class="my-informations" style="width:600px;">
          <a><%= f.label :photo %><br></a>
          <a><%= f.file_field :photo, as: :file %></a>
          <a><%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { value: current_user.first_name } %></a>
          <a><%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { value: current_user.last_name } %></a>
          <a><%= f.input :age,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: current_user.age }%></a>
          <a><%= f.input :location,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: current_user.location }%></a>
          <a><%= f.input :city,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: current_user.city }%></a>
          <a><%= f.select :gender, User::GENDER_TYPES.map { |gender| [gender] } %></a><br>
          <div class="mb-6">
            <%= f.button :submit, "Update", method: :put %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
