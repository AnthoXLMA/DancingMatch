<div class="container-edition px-6 py-8 bg-white rounded-xl shadow-md max-w-3xl mx-auto">
  <h2 class="text-2xl font-semibold mb-6">Modifier mon profil</h2>

  <%= simple_form_for(current_user, method: :put, html: { class: "space-y-6" }) do |f| %>
    <%= f.error_notification %>

    <!-- Photo -->
<!--     <div class="flex items-center space-x-4">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "w-12 h-12 rounded-full object-cover border" %>
      <% end %>
      <div>
        <%= f.label :photo, "Changer la photo", class: "block font-medium text-sm text-gray-700" %>
        <%= f.file_field :photo, class: "mt-1 text-sm" %>
      </div>
    </div> -->

    <!-- Informations de base -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= f.input :first_name, required: true, input_html: { value: current_user.first_name, class: "form-input" } %>
      <%= f.input :last_name, required: true, input_html: { value: current_user.last_name, class: "form-input" } %>
      <%= f.input :age, required: true, input_html: { placeholder: current_user.age, class: "form-input" } %>
      <%= f.input :location, required: true, input_html: { placeholder: current_user.location, class: "form-input" } %>
      <%= f.input :city, required: true, input_html: { placeholder: current_user.city, class: "form-input" } %>
    </div>

    <!-- Sélections -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= f.input :gender, collection: User::GENDER_TYPES, prompt: "Genre", label: "Genre", input_html: { class: "form-select" } %>
      <%= f.input :level, collection: User::LEVELS, prompt: "Niveau", label: "Niveau", input_html: { class: "form-select" } %>
      <%= f.input :xp, collection: User::XPS, prompt: "Expérience", label: "Expérience", input_html: { class: "form-select" } %>
      <%= f.input :coaching_status, collection: User::COACHING_STATUS, prompt: "Statut", label: "Coaching", input_html: { class: "form-select" } %>
      <%= f.input :practice_a_week, collection: User::PRACTICE_A_WEEK, prompt: "Heures / semaine", label: "Fréquence", input_html: { class: "form-select" } %>
      <%= f.input :technique, collection: User::TECHNIQUE, prompt: "Technique", label: "Technique", input_html: { class: "form-select" } %>
      <%= f.input :ambition, collection: User::AMBITION, prompt: "Ambition", label: "Ambition", input_html: { class: "form-select" } %>
      <%= f.input :social, collection: User::SOCIAL, prompt: "Social", label: "Activité sociale", input_html: { class: "form-select" } %>
    </div>

    <!-- Bouton -->
    <div class="pt-4">
      <%= f.button :submit, "Mettre à jour", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
    </div>
  <% end %>

</div>
