<div class="navbar-yourjob" style="box-shadow: 10px 3px 25px #bababa;">
  <div class="logo">
    <div class="logo-text">
      <h1>Dancing Partners</h1>
    </div>
  </div>
  <div class="menu-navbar">
    <%= link_to "Back", :back %>
    <%= link_to "Home", root_path %>
    <%= link_to "My profile", profile_path %>
  </div>
</div>
  <div class="title_text">
    <p>Evenements</p>
  </div>
  <div class="title_text">
    <p><%= link_to "Crée ton évenement", new_appointment_path %></p>
  </div>
  <div class="map-n-card">
    <div class ="container-appointments">
          <% @appointments.each do |appointment| %>
        <div class="appointment-card3">
            <p><%= link_to appointment.name, appointments_path(appointment) %></p>
            <p> Cet évenement a lieu à <%= appointment.address %></p>
            <p> Commence le  <%= appointment.start_on %></p>
            <p> Termine le <%= appointment.end_on %></p>
            <p> Organisateur: <%= link_to appointment.user.first_name %></p>
        </div>
      <% end %>
    </div>
    <div id="map" style="width:1000px"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
