<div class="navbar-yourjob" style="box-shadow: 10px 3px 25px #bababa;  justify-content:space-between;">
  <div class="logo">
    <div class="logo-text">
      <h1>Dancing Partners</h1>
    </div>
  </div>
<%= link_to "Back", :back %>
<%= link_to "Home", root_path %>
<%= link_to "My profile", profile_path %>
</div>

<div class="container">
  <%= simple_form_for (@appointment) do |f| %>
    <div class="container_one">
      <%= f.input :start_on %>
      <%= f.input :end_on %>
      <%= f.input :name, placeholder: "Donne un nom à ton événement" %>
      <%= f.input :address %>
      <%= f.input :latitude %>
      <%= f.input :longitude %>
      <%= f.collection_select :dance_id, Dance.all, :id, :title, prompt: true %>
      <%= f.button :submit, method: :post %>
    </div>
  <% end %>
</div>
