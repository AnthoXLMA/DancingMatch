<div class="title_text">
  <p>Your appointments</p>
</div>

<div class="all_container center">
  <div class="cards rent">
    <% @rappointments.each do |appointment| %>
        <div class="tree_name d-flex">
          <h1 class=" card_category_show rent"> <%= appointment.partner.name %></h1>
        </div>
      <div class="cards card card_index">
          <div class="rent">
            <h4><i class="fas fa-user"></i> <%= appointment.user.pseudo %> <%= appointment.user.location %></h4>
            <br>
            <div>
              <% if appointment.status == "accepted" %>
                <h2 style="background-color: green opacity:0.9"> <%= appointment.status %></h2>
              <% elsif appointment.status == "refused" %>
                <h2 style="background-color: #CD4A49 opacity:0.9"> <%= appointment.status %></h2>
              <% else %>
                <h2><%= appointment.status %></h2>
              <% end %>
            </div>
          </div>
        <div class="card-category" style="background-image: url('<%= cl_image_path rental.tree.photo.key %>')"></div>
            <%#= link_to tree.name, tree_path(tree), class: "link_tree" %>
      </div>
    <% end %>
  </div>
</div>

