<div class="navbar-yourjob" style="box-shadow: 10px 3px 25px #bababa;  justify-content:space-between;">
  <div class="logo">
    <div class="logo-text">
      <h1>Dancing Partners</h1>
    </div>
      <%= link_to "Back", :back %>
    </div>
     <div class="menu-navbar">
      <%= link_to "Back", :back %>
      <%= link_to "Home", root_path %>
      <%= link_to "My profile", profile_path %>
    </div>
  </div>

<%= simple_form_for (@profile), method: :put do |f| %>
<%= f.error_notification %>
<div class="form-inputs">
  <h2><%= @profile.dance.title %></h2>
    <%= f.label :Category %>
    <%= f.select :investissement, Profile::INVESTISSEMENT.map { |i| [i] } %><br>
    <%= f.label :Experience_Level %>
    <%= f.select :niveau, Profile::NIVEAU.map { |n| [n] } %><br>
    <%= f.label :Training_hours_per_week %>
    <%= f.select :training_per_week, Profile::TRAINING_per_Week.map { |t| [t] } %><br>
  </div>
    <div class="form-actions">
      <%= f.submit "Update", method: :put %>
    </div>
  <% end %>
</div>
