      <%= link_to "My profile", profile_path %>
    </div>
  </div>

<%= simple_form_for @profile, method: :patch do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <% @profile_user.each do |my_dance| %>
  <%= link_to my_dance.dance.title, method: :delete %>
  <% end %>
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :first_name, required: false, autofocus: true %>
    <%= f.input :age, required: false, autofocus: true %>
    <%= f.input :location,
                required: true,
                input_html: { autocomplete: "location" } %>
    <%= f.input :experience,
                required: true,
                input_html: { autocomplete: "AnnÃ©es d'expÃ©rience'" } %>
    <%= f.label :genre %><br>
    <%= f.select :gender, User::GENDER_TYPES.each.map { |gender| [gender] } %>
    <%= f.label :photo %><br>
    <%= f.file_field :photo, as: :file %>
  </div>
    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>
</div>
