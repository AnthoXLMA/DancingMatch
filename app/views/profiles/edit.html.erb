<div class="title">
  <h1>Update your profile</h1>
</div>

<div class="dance-selection">
  <h1>Select a dance</h1>
  <div class="alt-menu">
    <div class="dances_menu">
      <h2><% @menu_dances.map do |dance| %></h2>
        <div class="menu">
         <ol><%= dance.title %></ol>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="pt-30 row justify-content-center">
  <div class="col-12 col-md-4">
    <h4 class="text-center">Add a dance</h4>
    <%= simple_form_for current_user, url: profile_path do |f| %>
      <%= f.input :dances, placeholder: "Your dance" %>
      <div class="form-actions">
        <%= f.submit "Add", class: "btn btn-flat" %>
      </div>
    <% end %>
  </div>
</div>

<div class="pt-30 container">
  <h1 class="text-center">New Dance</h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for current_user, url: profile_path do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :dances %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
