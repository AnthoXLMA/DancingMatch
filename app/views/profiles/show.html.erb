<h1>Profil</h1>

<h1><%= @user %></h1>

<div class="container">
  <div class="cards">
    <% @partner.dances.each do |dance| %>
      <%= render "partners/dance_card", dance: dance %>
    <% end %>
  </div>
  <div class="pt-30 row justify-content-center">
    <div class="col-12 col-md-4">
      <h4 class="text-center">Add your dance</h4>
      <%= simple_form_for [ @partner, @dance ] do |f| %>
        <%= f.input :title, placeholder: "your dance" %>
        <div class="form-actions">
          <%= f.submit "Add", class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
